---
import Layout from "../layouts/Layout.astro";
import { ExternalLink, Linkedin, Github, Twitter } from "@lucide/svelte";
import ProjectsSection from "../components/ProjectsSection.svelte";
import OpenSourceSection from "../components/OpenSourceSection.svelte";

const socials = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/thalles-passos/",
    icon: Linkedin,
  },
  {
    name: "GitHub",
    url: "https://github.com/thallesp",
    icon: Github,
  },
  {
    name: "Twitter",
    url: "https://twitter.com/thallescomumh",
    icon: Twitter,
  },
];
---

<Layout>
  <div class="min-h-screen bg-background text-foreground">
    <section class="border-b">
      <div class="container mx-auto px-6 py-16 lg:py-24">
        <div class="max-w-3xl">
          <h1 class="text-4xl lg:text-6xl font-bold tracking-tight mb-6">
            About me
          </h1>
          <p class="text-xl text-muted-foreground leading-relaxed">
            Hey!<span class="wave px-1">ðŸ‘‹</span>I'm <span
              class="text-foreground font-medium">Thalles Passos</span
            >, a full stack developer with experience in web development, mobile
            development, backend development, and devops. I'm currently working
            as a full stack developer at
            <a
              href="https://www.linkedin.com/company/notusteam/"
              target="_blank"
              class="text-foreground hover:text-muted-foreground underline underline-offset-4 transition-colors inline-flex items-center gap-1"
            >
              Notus Labs
              <ExternalLink size={16} />
            </a>
            <div class="flex gap-2 items-center mt-4">
              <span class="text-muted-foreground text-xl">Follow me on:</span>
              {
                socials.map((social) => (
                  <a href={social.url} target="_blank">
                    <social.icon
                      size={20}
                      class="text-muted-foreground hover:text-foreground transition-colors"
                    />
                  </a>
                ))
              }
            </div>
          </p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-6 py-16 space-y-24">
      <ProjectsSection />
      <OpenSourceSection />
    </div>
  </div>
</Layout>
